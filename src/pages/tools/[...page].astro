---
import type { GetStaticPathsOptions, Page } from 'astro';
import { type CollectionEntry, getCollection } from 'astro:content';
import Pagination from '../../components/Pagination.astro';
import ToolPreview from '../../components/ToolPreview.astro'; // create similar to ProjectPreview
import siteConfig from '../../data/site-config';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
    const tools = (await getCollection('tools')).sort((a, b) => a.data.order - b.data.order); // sort by order ascending
    return paginate(tools, { pageSize: siteConfig.toolsPerPage || 6 });
}

type Props = { page: Page<CollectionEntry<'tools'>> };
const { page } = Astro.props;
const toolList = page.data;
---

<BaseLayout title="Tools" description="Explore interactive tools Iâ€™ve built for biotech and data" showHeader={false}>
    <h1 class="mb-12 font-serif text-2xl leading-tight italic sm:mb-16 sm:text-4xl">Tools</h1>

    {toolList.map((tool) => <ToolPreview tool={tool} class="mb-10 sm:mb-12" />)}

    <Pagination page={page} class="my-16 sm:my-24" />
</BaseLayout>
